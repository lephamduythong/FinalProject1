@section myJs {
    <script src="/js/user/commentBox.js"></script>
    <script>
        @{
            var author = @Html.Raw(@Context.Session.GetString("HocSinhHoTen"));
        }
        let _author = '@author';
        renderCommentBox(@Model.BaiHocId,
            "commentBox",
            _author,
            );
    </script>
